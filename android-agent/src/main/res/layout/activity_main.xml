<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nexus Telemetry Agent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app collects device telemetry with your consent.\n\nData collected:\n• Device info\n• Memory usage\n• CPU usage\n• Timestamps"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telemetry: DISABLED"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/consent_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Enable Telemetry"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/reject_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Reject" />

</LinearLayout>
